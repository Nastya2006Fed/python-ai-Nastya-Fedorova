SELECT DISTINCT ?river ?riverLabel ?country ?countryLabel ?length ?source ?sourceLabel ?mouth ?mouthLabel
WHERE {
  ?river wdt:P31 wd:Q4022 ;  # Экземпляр: река (Q4022 — правильный идентификатор для "река")
         wdt:P17 ?country ;  # Страна (P17)
         wdt:P2043 ?length ; # Длина (P2043)
         wdt:P885 ?source ;  # Исток (P885)
         wdt:P403 ?mouth .   # Устье (P403)

  SERVICE wikibase:label { bd:serviceParam wikibase:language "[AUTO_LANGUAGE],ru". }
}
ORDER BY DESC(?length)
LIMIT 1000
